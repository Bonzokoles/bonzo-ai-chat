# Backend Environment Variables
# Copy this file to .env and configure

# Database
DATABASE_URL=sqlite:///./chat.db

# CORS - dozwolone origins (oddzielone przecinkami)
# Development: *
# Production: https://twoja-strona.pages.dev,https://twoja-domena.com
ALLOWED_ORIGINS=*

# MCP Tools Configuration
MCP_SAFE_DIR=./mcp_workspace
MCP_WEB_SEARCH_ENABLED=true
MCP_CODE_EXECUTION_ENABLED=true

# Model Configuration
MODEL_PATH=models/your-model-folder
MODEL_DEVICE=auto  # auto, cuda, cpu
MODEL_MAX_TOKENS=512

# Server Configuration
HOST=0.0.0.0
PORT=8000
