{
  "name": "mybonzo-ai-chat",
  "version": "2.0.0",
  "description": "MyBonzo AI Chat - Multi-provider AI chat component for Astro",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "wrangler:dev": "wrangler pages dev ./dist",
    "wrangler:deploy": "wrangler pages deploy ./dist --project-name=mybonzo-ai-chat",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:4322 && electron .\"",
    "electron:build": "astro build && electron-builder",
    "electron:start": "electron .",
    "dist": "npm run build:static && electron-builder",
    "build:static": "astro build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "astro": "^5.15.9",
    "openai": "^4.56.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@astrojs/cloudflare": "^12.6.11",
    "@astrojs/react": "^4.4.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "wait-on": "^9.0.3",
    "wrangler": "^3.0.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.mybonzo.jimbo",
    "productName": "JIMBO AI Chat",
    "directories": {
      "output": "release",
      "buildResources": "electron/resources"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "Chatbotlocal/backend/**/*",
      "!Chatbotlocal/backend/venv/**/*",
      "!**/*.pyc"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "electron/resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "astro",
    "ai",
    "chat",
    "openai",
    "anthropic",
    "cloudflare",
    "electron",
    "desktop",
    "local-ai"
  ],
  "author": "MyBonzo",
  "license": "MIT"
}